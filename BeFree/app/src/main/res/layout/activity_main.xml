<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vitor.befree2.MainActivity"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@drawable/mainbackground">

    <ImageView
        android:layout_width="244dp"
        android:layout_height="44dp"
        android:src="@drawable/logo_befree"
        android:layout_gravity="center"
        android:layout_weight="0.07"
        android:layout_marginTop="250dp"
        android:id="@+id/imgLogo" />

    <EditText
        android:layout_width="310dp"
        android:layout_height="35dp"
        android:id="@+id/editUsuario"
        android:layout_gravity="center"
        android:hint="USUARIO"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#ffffff"
        android:background="@drawable/campo"
        android:drawablePadding="-7dp"
        android:layout_marginTop="75dp"
        android:textStyle="bold"
        android:textSize="10dp"
        android:drawableLeft="@mipmap/ic_user"
        android:textColorHint="#ffffff" />

    <EditText
        android:layout_width="310dp"
        android:layout_height="35dp"
        android:id="@+id/editSenha"
        android:layout_gravity="center"
        android:hint="SENHA"
        android:fontFamily="Bebas Neue"
        android:textColor="#ffffff"
        android:background="@drawable/campo"
        android:drawablePadding="-7dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="10dp"
        android:drawableLeft="@mipmap/ic_password"
        android:textColorHint="#ffffff"
        android:password="true" />

    <Button
        android:layout_width="310dp"
        android:layout_height="25dp"
        android:id="@+id/btnEntrar"
        android:text="ENTRAR"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07"
        android:layout_marginTop="15dp"
        android:background="@drawable/botao"
        android:textSize="10dp"
        android:textStyle="bold"
        android:onClick="Login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="ENTRAR COM FACEBOOK"
        android:id="@+id/txtFacebook"
        android:fontFamily="sans-serif-condensed"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_weight="0"
        android:textSize="10dp"
        android:paddingTop="0dp"
        android:drawableLeft="@mipmap/ic_facebook"
        android:drawablePadding="-7dp"
        android:gravity="center" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="CADASTRE-SE"
            android:id="@+id/txtCadastrar"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="left"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_weight="0"
            android:textSize="10dp"
            android:paddingTop="0dp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="ESQUECEU SUA SENHA?"
            android:id="@+id/txtEsqueceu"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_weight="0"
            android:textSize="10dp"
            android:layout_gravity="right"
            android:layout_marginLeft="150dp"
            android:gravity="center"
            android:paddingRight="0dp" />

    </FrameLayout>

</LinearLayout>
